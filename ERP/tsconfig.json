{
  "compilerOptions": {
    "typeRoots": ["./types"],
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["layouts/*"],
      "@components/*": ["components/*"],
      "@theme/*": ["theme/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@sections/*": ["sections/*"],
      "@_mocks_/*": ["_mocks_/*"],
      "@api/": ["pages/api/*"]
    },
    "target": "es5",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    // "module": "esnext",
    "module": "CommonJs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "types/**/*.ts", "**/*.ts", "**/*.tsx", "."],
  "exclude": ["node_modules"]
}
